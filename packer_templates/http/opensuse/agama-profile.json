{
  "product": {
    "id": "Leap"
  },
  "localization": {
    "language": "en_US.UTF-8",
    "keyboard": "us",
    "timezone": "UTC"
  },
  "network": {
    "connections": [
      {
        "id": "eth0",
        "interface": "eth0",
        "method": "auto"
      }
    ]
  },
  "storage": {
    "bootDevice": "/dev/sda",
    "encryptionPassword": "",
    "lvm": false,
    "guided": {
      "device": "/dev/sda",
      "boot": {
        "configure": true,
        "device": "/dev/sda1"
      }
    }
  },
  "software": {
    "patterns": ["base"],
    "packages": [
      "openssh",
      "sudo",
      "curl",
      "wget"
    ]
  },
  "users": [
    {
      "fullName": "root",
      "userName": "root",
      "password": "vagrant",
      "hashedPassword": false
    },
    {
      "fullName": "Vagrant",
      "userName": "vagrant",
      "password": "vagrant",
      "hashedPassword": false,
      "home": "/home/vagrant",
      "shell": "/bin/bash"
    }
  ],
  "root": {
    "password": "vagrant",
    "hashedPassword": false,
    "sshPublicKey": ""
  },
  "scripts": {
    "post": [
      "echo 'vagrant ALL=(ALL) NOPASSWD: ALL' > /etc/sudoers.d/vagrant",
      "chmod 0440 /etc/sudoers.d/vagrant",
      "systemctl enable sshd"
    ]
  }
}
