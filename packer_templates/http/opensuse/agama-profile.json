{
  "product": {
    "id": "Leap"
  },
  "localization": {
    "language": "en_US.UTF-8",
    "keyboard": "us",
    "timezone": "UTC"
  },
  "network": {
    "connections": [
      {
        "id": "eth0",
        "interface": "eth0",
        "method": "auto"
      }
    ]
  },
  "storage": {
    "guided": {
      "boot": {
        "configure": true,
        "device": "/dev/sda1",
        "type": "efi"
      }
    },
    "partitions": [
      {
        "device": "/dev/sda2",
        "size": "rest",
        "filesystem": "ext4",
        "mountPoint": "/",
        "label": "root"
      }
    ]
  },
  "software": {
    "patterns": ["openSUSE-release", "base"],
    "packages": [
      "openssh",
      "sudo",
      "curl",
      "wget"
    ]
  },
  "user": [
    {
      "fullName": "Vagrant",
      "userName": "vagrant",
      "password": "vagrant",
      "hashedPassword": false,
      "home": "/home/vagrant",
      "shell": "/bin/bash"
    }
  ],
  "root": {
    "password": "vagrant",
    "hashedPassword": false,
    "sshPublicKey": ""
  },
  "scripts": {
    "post": [
      {
        "name": "vagrant_sudo_ssh",
        "chroot": true,
        "content": "#!/bin/bash\necho 'vagrant ALL=(ALL) NOPASSWD: ALL' > /etc/sudoers.d/vagrant\nchmod 0440 /etc/sudoers.d/vagrant\nsystemctl enable sshd"
      }
    ]
  }
}
