---
provisioner:
  name: <%= @provisioner %>

platforms:
<% @providers.each do |k,v| -%>
- name: <%= @boxname + '-' + k %>
  driver:
    name: vagrant
    provider: <%= k %>
    vm_hostname: bento-test
    box: bento-<%= @boxname %>
    box_url: file://<%= Dir.pwd %>/builds/<%= v['file'] %>
    synced_folders:
<% if k =~ /hyperv/ -%>
      - [".", "/vagrant", "disabled: true"]
<% else -%>
      - [".", "/vagrant", "disabled: <%= @share_disabled %>"]
<% end -%>
<% end -%>
suites:
- name: default
